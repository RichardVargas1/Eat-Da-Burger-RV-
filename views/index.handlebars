<h1>Eat Da Burger. Come Eat it Right Now!</h1>

<br>

<div class="row">
    <div class="col-md-6">
        <div id='cookedBurgers'>
            <h2>Burgers Ready for some Grub:</h2>
            <ul>
                {{#each burgers}} {{#unless this.devoured}}
                <li>
                    {{this.id}}. {{this.burger_name}}

                    <form action="/{{this.id}}?_method=PUT" method="delete">
                        <input type="hidden" name="cookedBurgers" value="true">
                        <button class="btn btn-warning" type="submit">Eat Da Burger!</button>
                    </form>

                </li>
                {{/unless}} {{/each}}
            </ul>
        </div>
    </div>

    <div class="col-md-6">
        <div id='devouredBurger'>
            <h2>Burgers That Have Been Devoured: </h2>
            <ul>
                {{#each burgers}} {{#if this.devoured}}
                <li>
                    {{this.id}}. {{this.burger_name}}
                </li>
                {{/if}} {{/each}}
            </ul>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-3"></div>
        <div id='addDaBurger'>
            <h2>Add a Burger On the Menu</h2>
            <form class="create-form" action="/" method="POST">
                <div class="form-group">
                    <label for="addDaBurger">Name of Burger:</label>
                    <input type="text" id="addDaBurger" name="burger_name">
                </div>
                <button class="btn btn-primary" type="submit">Order Your Burger</button>
            </form>
        </div>
    </div>
</div>